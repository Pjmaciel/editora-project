<%= form_with(model: assembly) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :book_id, class: "form-label" %>
    <%= form.select :book_id, options_from_collection_for_select(@books, :id, :title), class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :part_ids, "Select Parts", class: "form-label" %><br>
    <%= form.collection_check_boxes :part_ids, @parts, :id, :name do |b| %>
      <div class="form-check">
        <%= b.check_box(class: "form-check-input") %>
        <%= b.label(class: "form-check-label") %>
      </div>
    <% end %>
  </div>

  <div class="flex items-center justify-between flex-wrap">
    <div class="sm:flex-1 sm:mb-0 mb-6">
      <%= form.submit class: "btn btn-primary" %>
    </div>

    <% if form.object.new_record? %>
      <%= link_to "Cancel", assemblies_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to "Cancel", assembly_path(assembly), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
