<div class="container mx-auto px-4 md:py-16 py-6 md:mb-16">
  <div class="md:flex items-center justify-between">
    <h1 class="mb:mb-0 mb-6 text-4xl font-semibold font-heading text-zinc-900 dark:text-zinc-100 tracking-tight">Accounts</h1>
    <div class="md:flex items-center md:space-x-6">
      <div class="flex lg:flex-row flex-row-reverse flex-wrap items-center lg:space-x-6 lg:w-auto w-full justify-between">
        <button type="button" class="btn btn-white lg:order-1 order-2 py-2 lg:hidden block peer group">
          <%= icon "magnifying-glass", classes: "stroke-current dark:text-zinc-400 w-6 h-6 dark:group-focus:text-primary-500/90" %>
        </button>

        <%= search_form_for @q, url: accounts_path, method: :get, html: { id: "search-form" } do |f| %>
          <%= f.search_field :account_number_cont, id: "search-input", class: "form-input lg:w-auto w-full", placeholder: "Search" %>
        <% end %>

        <div class="flex items-center lg:justify-start justify-center lg:order-1 order-2">
          <%= dropdown do %>
            <li>
              <label for="sort_ascending"
                     class="py-3 px-4 hover:text-primary-600 focus:text-primary-600 w-full group text-zinc-600 dark:text-zinc-50 dark:hover:text-zinc-300 space-x-2 flex items-center justify-between group select-none">
                <div class="flex-1">
                  <%= radio_button_tag :sort, 'name ASC', params[:sort] == 'name ASC', id: 'sort_ascending' %>
                  <span class="pl-2">Ascending</span>
                </div>
                <%= icon "bars-arrow-up", classes: "text-zinc-500 w-4 h-4 group-hover:text-primary-600/90" %>
              </label>
            </li>
            <li>
              <label for="sort_descending"
                     class="py-3 px-4 hover:text-primary-600 focus:text-primary-600 w-full group text-zinc-600 dark:text-zinc-50 dark:hover:text-zinc-300 space-x-2 flex items-center justify-between group select-none">
                <div class="flex-1">
                  <%= radio_button_tag :sort, 'name DESC', params[:sort] == 'name DESC', id: 'sort_descending' %>
                  <span class="pl-2">Descending</span>
                </div>
                <%= icon "bars-arrow-down", classes: "text-zinc-500 w-4 h-4 group-hover:text-primary-600/90" %>
              </label>
            </li>
          <% end %>
          <button type="button" class="btn py-2 rounded-none btn-white group">
            <%= icon "printer", classes: "w-6 h-6 text-zinc-600 group-hover:text-primary-600 dark:text-zinc-300/80 dark:group-hover:text-primary-500 pointer-events-none" %>
          </button>
          <button type="button" class="btn btn-white group rounded-r-full rounded-l-none border-l-0 py-2">
            <%= icon "arrow-down-tray", classes: "w-6 h-6 text-zinc-600 group-hover:text-primary-600 dark:text-zinc-300/80 dark:group-hover:text-primary-500 pointer-events-none" %>
          </button>
        </div>
      </div>
      <%= link_to "Create account", (defined?(new_account_path) ? new_account_path : "#"), class: "btn btn-primary md:mt-0 mt-6" %>
    </div>
  </div>

  <div class="p-4" data-tabs-target="panel">
    <div class="overflow-x-auto">
      <table class="w-full text-left text-sm min-w-full border-collapse">
        <thead>
        <tr>
          <th class="text-zinc-600 dark:text-zinc-300 font-sans font-medium md:whitespace-normal whitespace-nowrap md:px-0 p-4">Account Number</th>
          <th class="text-zinc-600 dark:text-zinc-300 font-sans font-medium md:whitespace-normal whitespace-nowrap md:px-0 p-4">Name</th>
          <th></th>
        </tr>
        </thead>
        <tbody class="text-zinc-800 divide-y divide-zinc-200/80 dark:divide-zinc-700">
        <% @accounts.each do |account| %>
          <tr class="md:whitespace-normal whitespace-nowrap">
            <td class="align-top md:px-0 p-4 dark:text-zinc-100">
              <p><%= link_to account.account_number, account %></p>
            </td>
            <td class="align-top md:px-0 p-4 dark:text-zinc-100 font-sans">
              <%= account.supplier.name %>
            </td>
            <td class="align-top pt-2">
              <div data-controller="dropdown" class="relative md:flex md:justify-end justify-start">
                <button class="flex relative z-40 md:w-10 md:h-9 py-3 px-4 md:px-0 md:py-0 w-full md:rounded-xl rounded-full bg-white focus:ring-4 focus:ring-zinc-300/30 items-center md:justify-center justify-between border md:border-transparent focus:border-zinc-300 border-zinc-300/80 hover:border-zinc-300 dark:hover:bg-zinc-800 dark:hover:border-zinc-600 dark:focus:bg-zinc-800 dark:focus:border-zinc-500 dark:bg-zinc-700/60 dark:text-white dark:border-zinc-500/30 dark:shadow-zinc-950/40 dark:hover:bg-zinc-800/90 dark:focus:ring-zinc-700/80 dark:focus:border-zinc-400/80"
                        data-action="click->dropdown#toggle click@window->dropdown#hide">
                  <%= icon "ellipsis-horizontal", classes: "md:block hidden stroke-current w-6 h-6 flex-shrink-0 text-zinc-600/80 dark:text-zinc-200" %>
                  <span class="md:hidden block">Actions</span>
                  <%= icon "chevron-down", classes: "md:hidden block w-4 h-4 stroke-current flex-shrink-0 text-zinc-600/80 dark:text-zinc-400" %>
                </button>
                <ul
                  class="hidden origin-top-right absolute md:top-12 mt-3 md:mt-0 top-10 right-0 w-48 md:shadow-sm md:rounded-xl rounded-3xl py-2 shadow-zinc-300/20 z-50 bg-white md:text-[15px] text-base border dark:bg-zinc-800 dark:shadow-zinc-950/20 dark:border-zinc-600"
                  data-transition-enter-active="transition ease-out duration-100"
                  data-transition-enter-from="transform opacity-0 scale-95"
                  data-transition-enter-to="transform opacity-100 scale-100"
                  data-transition-leave-active="transition ease-in duration-100"
                  data-transition-leave-from="transform opacity-100 scale-100"
                  data-transition-leave-to="transform opacity-0 scale-95" data-dropdown-target="menu">
                  <li>
                    <%= link_to account, class: "px-4 md:py-2 py-3 flex items-center justify-between hover:text-zinc-900 text-zinc-700 dark:text-zinc-200 dark:hover:text-white" do %>
                      <span>Go to account</span>
                      <%= icon "chevron-right", classes: "md:hidden block w-5 h-5 text-zinc-500/60 dark:text-zinc-400" %>
                    <% end %>
                  </li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <nav aria-label="Page navigation" class="text-zinc-500 sm:text-sm text-base font-medium dark:text-zinc-300">
    <ul class="flex flex-wrap items-center sm:justify-between justify-center">
      <li class="flex-1 flex justify-start items-center sm:w-auto w-full">
        <%= link_to "Previous", "#", class: "btn btn-white" %>
      </li>
      <div class="flex items-center justify-center sm:w-auto w-full sm:text-sm text-lg">
        <li>
          <%= link_to "1", "#", class: "py-2 px-4 border-t-2 block border-primary-500 hover:bg-primary-50/50 text-primary-600 dark:text-primary-400 dark:border-primary-400 dark:hover:bg-primary-500/30" %>
        </li>
        <li>
          <%= link_to "2", "#", class: "py-2 px-4 block border-t-2 border-transparent rounded hover:bg-zinc-50/50 dark:hover:bg-zinc-500/30 dark:hover:text-zinc-200" %>
        </li>
        <li>
          <%= link_to "3", "#", class: "py-2 px-4 block border-t-2 border-transparent rounded hover:bg-zinc-50/50 dark:hover:bg-zinc-500/30 dark:hover:text-zinc-200" %>
        </li>
        <li>
          <span class="py-2 px-4 block border-t-2 border-transparent rounded pointer-events-none select-none">&hellip;</span>
        </li>
        <li>
          <%= link_to "8", "#", class: "py-2 px-4 block border-t-2 border-transparent rounded hover:bg-zinc-50/50 dark:hover:bg-zinc-500/30 dark:hover:text-zinc-200" %>
        </li>
        <li>
          <%= link_to "9", "#", class: "py-2 px-4 block border-t-2 border-transparent rounded hover:bg-zinc-50/50 dark:hover:bg-zinc-500/30 dark:hover:text-zinc-200" %>
        </li>
        <li>
          <%= link_to "10", "#", class: "py-2 px-4 block border-t-2 border-transparent rounded hover:bg-zinc-50/50 dark:hover:bg-zinc-500/30 dark:hover:text-zinc-200" %>
        </li>
      </div>
      <li class="flex-1 flex justify-end items-center">
        <%= link_to "Next", "#", class: "btn btn-white" %>
      </li>
    </ul>
  </nav>
</div>

<%= render "shared/footer" %>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const searchInput = document.getElementById('search-input');
        const searchForm = document.getElementById('search-form');

        searchInput.addEventListener('input', () => {
            searchForm.submit();
        });
        const length = searchInput.value.length;
        searchInput.focus();
        searchInput.setSelectionRange(length, length);
    });
</script>
